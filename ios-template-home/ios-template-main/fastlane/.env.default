# Default environment variables for Fastlane
# Copy this file to .env and fill in your values
# Never commit .env file to git!

# App Configuration
SCHEME=iOSTemplate
APP_IDENTIFIER=com.yourcompany.iostemplate
DEVICE=iPhone 15 Pro

# Apple Developer
APPLE_ID=your.email@example.com
APPLE_TEAM_ID=XXXXXXXXXX
ITC_TEAM_ID=XXXXXXXXXX

# App Store Connect
# Generate at: https://appstoreconnect.apple.com/access/api
ASC_KEY_ID=YYYYYYYYYY
ASC_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ASC_KEY_CONTENT=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----

# Or use App-Specific Password
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Match (Code Signing)
MATCH_GIT_URL=https://github.com/yourorg/certificates
MATCH_PASSWORD=your_strong_password
MATCH_KEYCHAIN_PASSWORD=temp_keychain_password

# Firebase (Optional)
FIREBASE_CLI_TOKEN=your_firebase_token

# Slack Notifications (Optional)
SLACK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Skip certain steps (for testing)
SKIP_TESTS=false
SKIP_MATCH=false
SKIP_GIT_CHECK=false

# CI Environment
CI=false
