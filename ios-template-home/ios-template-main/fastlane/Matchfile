# Matchfile
# More information: https://docs.fastlane.tools/actions/match/

# Git repository URL for storing certificates and profiles
git_url(ENV['MATCH_GIT_URL'] || "https://github.com/yourorg/certificates")

# Git branch to use (optional)
git_branch("main")

# Storage mode (:git, :google_cloud, :s3, :gitlab_secure_files)
storage_mode("git")

# App Identifier
app_identifier(ENV['APP_IDENTIFIER'] || "com.yourcompany.iostemplate")

# Type of provisioning profile
# Options: development, adhoc, appstore, enterprise
type("development")

# Username for Git authentication
username(ENV['APPLE_ID'] || "your.email@example.com")

# Team ID
team_id(ENV['APPLE_TEAM_ID'] || "XXXXXXXXXX")

# Keychain name
keychain_name("fastlane_tmp_keychain")

# Keychain password
keychain_password(ENV['MATCH_KEYCHAIN_PASSWORD'] || "temp_password")

# Readonly mode (don't create new certificates/profiles)
readonly(false)

# Force renew certificates
force(false)

# Force renew for new devices
force_for_new_devices(true)

# Skip confirmation prompts
skip_confirmation(false)

# Shallow clone (faster, but limited git history)
shallow_clone(true)

# Clone branch only (faster clone)
clone_branch_directly(true)

# For more information about Match, see:
# https://docs.fastlane.tools/actions/match/
